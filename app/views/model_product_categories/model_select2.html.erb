<table>
<tr>
  <td>
	<div class="catalogentry" id="select3">
      <select name="atv_model" id="atv_model">
		<option value="" <% if @atv_models.nil? -%> selected <% end -%>>Choose a Model...</option> 
    	  <% for item in @atv_models %>
			<option value="<%= h(item.description) -%>" <% if @atv_model==item.description -%> selected <% end -%>> 
			<%= h(item.model) -%> - <%= h(item.description) -%></option>
    	  <% end %>
   	  </select>

<%= observe_field("atv_model",
	:update => "select4",
	:url => { :action => :model_select3 },
	:with => "atv_model") -%>

	</div>
  </td>
  <td>
	<div class="catalogentry" id="select4">
 	  <select name="atv_year" id="atv_year">
		<option value="" <% if @atv_years.nil? -%>selected<% end -%>>Choose a Year...</option> 
    	  <% for item in @atv_years %>
			<option value="<%= h(item.year) -%>" <% if @atv_year==item.year.to_s -%> selected <% end -%>> 
			<%= h(item.year) -%></option>
    	  <% end %>
   	  </select>

<%= observe_field("atv_year",
	:update => "select3",
	:url => { :action => :model_select3 },
	:with => "atv_year") -%>

	</div>
  </td>
</tr>
</table>
